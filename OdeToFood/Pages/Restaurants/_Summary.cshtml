@model OdeToFood.Core.Restaurant

<div class="panel panel-default">
    <div class="left-container">
        <div class="panel-heading mt-3">
            <h3>@Model.Name</h3>
        </div>
        <div class="panel-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
    </div>
    <div class="right-container">
        <div class="panel-footer mt-4">
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fas fa-info-circle ml-2"></i></a>
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="far fa-edit ml-2"></i></a>
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="far fa-trash-alt ml-2"></i></a>
        </div>
    </div>
</div>
